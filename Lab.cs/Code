print("What is the current temperature in Celsius?")

int temp = 30
if (temp > 30) 
{Console.WriteLine("Stay hydrated and avoid staying in the sun for too long!");}

if (temp < 30) 
{Console.WriteLine("Enjoy the pleasant weather!");}

print("Your Grade:")

int grade = 90;
if (grade > 89) 

{Console.WriteLine("A grade received!");} 
else if (grade < 80) 

{Console.WriteLine("Below B grade received.");} 
else 

{Console.WriteLine("Grade received!");}